<h1>Book detail</h1>
<div>
  <p>ユーザー画像 :<%= image_tag 'sample-author1.jpg' %></p>
  <p>ユーザーネーム　:<%= @book.user.name %></p>
  <p>Title :<%= @book.title %></p>
  <p>Opinion :<%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>
