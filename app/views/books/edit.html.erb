
<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">

      <h1>Editing Book</h1>

      <%= form_with model: @book do |f| %>

        <p>Title<p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %>
      
        <p><%= f.submit 'Update Book', class: "btn btn-info btn-block" %></p>
      
      <% end %>

    </div>
  </div>
</div>
