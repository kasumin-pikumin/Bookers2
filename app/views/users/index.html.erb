<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', user: current_user, book: @book %>

    <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
            <tr>
              <th>
                <%= image_tag user.get_profile_image(100,100) %>
                <p><%= link_to user.name, user_path(user.id) %></p>
              </th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user.id), class: "btn btn-info btn-block" %></th>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>