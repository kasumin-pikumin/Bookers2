<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <%= if @user == current_user %>
    <p><%= link_to "プロフィール編集",edit_user_registration_path %></p>
    <% end %>
</div>

<% @book.each do |book|%>
<div>
  <p>ユーザー画像 :<%= image_tag 'sample-author1.jpg' %></p>
  <p>ユーザーネーム　:<%= book.user.name %></p>
  <p>Title :<%= book.title %></p>
  <p>Opinion :<%= book.body %></p>
</div>
<% end %>

</div>