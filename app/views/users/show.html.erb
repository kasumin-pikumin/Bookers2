<div>
  <div class="container px-5 px-sm-0">

    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <% if @user == current_user %>
        <p><%= link_to "プロフィール編集",edit_user_path %></p>
        <% end %>

        <h2>New book</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %> error prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <th><%= image_tag book.user.get_profile_image(100,100) %> </th>
              <th><%= book.title %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>
