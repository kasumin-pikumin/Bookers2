<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">

    <h1>User info</h1>
    <%= form_with model: @user do |f| %>

      <h4>Name</h4>
      <%= f.text_field :name %>

      <h4>Image</h4>
      <%= f.file_field :profile_image,  accept: "image/*" %>

      <h4>Introduction</h4>
      <%= f.text_area :introduction %>

      <%= f.submit "Update User", class: "btn btn-info btn-block" %>
    <% end %>

    </div>
  </div>
</div>